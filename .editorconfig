root = true

[*]
insert_final_newline = true
charset = utf-8
indent_style = space


[*.cs]
indent_size = 4
tab_width = 4
end_of_line = lf
trim_trailing_whitespace = true

# Verify settings
[*.{received,verified}.{json,txt,xml}]
charset = "utf-8-bom"
end_of_line = lf
indent_size = unset
indent_style = unset
insert_final_newline = false
tab_width = unset
trim_trailing_whitespace = false